# Hedera Flow MVP - Frontend Production Environment Variables
# Copy this file to .env.production for production builds

# API Configuration
NEXT_PUBLIC_API_URL=https://api.hederaflow.com
NEXT_PUBLIC_API_TIMEOUT=30000

# Hedera Configuration (Public - for client-side SDK)
NEXT_PUBLIC_HEDERA_NETWORK=testnet
NEXT_PUBLIC_HEDERA_MIRROR_NODE_URL=https://testnet.mirrornode.hedera.com

# HashPack Wallet Configuration
NEXT_PUBLIC_HASHPACK_APP_METADATA_NAME=Hedera Flow
NEXT_PUBLIC_HASHPACK_APP_METADATA_DESCRIPTION=Blockchain-powered utility bill verification
NEXT_PUBLIC_HASHPACK_APP_METADATA_ICON=https://hederaflow.com/icon.png

# Application Settings
NEXT_PUBLIC_APP_NAME=Hedera Flow
NEXT_PUBLIC_APP_URL=https://hederaflow.com
NEXT_PUBLIC_ENVIRONMENT=production

# Feature Flags
NEXT_PUBLIC_ENABLE_WALLET_CONNECT=true
NEXT_PUBLIC_ENABLE_CLIENT_OCR=true
NEXT_PUBLIC_ENABLE_DISPUTES=true

# Supported Countries (comma-separated)
NEXT_PUBLIC_SUPPORTED_COUNTRIES=ES,US,IN,BR,NG

# OCR Configuration
NEXT_PUBLIC_OCR_CONFIDENCE_THRESHOLD=0.90
NEXT_PUBLIC_OCR_MAX_IMAGE_SIZE=5242880

# Analytics
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=hederaflow.com
NEXT_PUBLIC_UMAMI_WEBSITE_ID=your-umami-website-id

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Map API (for GPS validation)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
